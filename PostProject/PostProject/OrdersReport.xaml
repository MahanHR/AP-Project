<UserControl x:Class="PostProject.OrdersReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PostProject"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="40" HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" Height="400" Name="stack1">
            <TextBlock x:Name="Orders" FontWeight="Bold" Text="" TextAlignment="Center" Foreground="WhiteSmoke" Width="500" Height="335"></TextBlock>
            <Button Name="ShowOrders" Click="ShowOrders_Click" Background="#00609c" Foreground="WhiteSmoke" Width="170">
                <Bold>Show Orders</Bold>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
