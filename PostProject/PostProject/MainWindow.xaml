<Window x:Class="PostProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#F1C40F">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="WhiteSmoke" Width="300" Height="200">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Margin="0,10" Width="75">UserName</TextBlock>
                <TextBox Margin="0,10" Width="75"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Margin="0,10" Width="75">Password</TextBlock>
                <TextBox Margin="0,10" Width="75"></TextBox>
            </StackPanel>
            <Button Margin="10" Background="#0E6251" Foreground="WhiteSmoke" Width="150">Login</Button>
            <Button Margin="10" Width="150" Background="#E8F8F5">SignUp Employee</Button>
        </StackPanel>
    </Grid>
</Window>
