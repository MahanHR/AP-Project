<UserControl x:Class="PostProject.ShowComment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PostProject"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Sources/back.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Name="stack1">
            <TextBlock x:Name="Orders" FontWeight="Bold" TextAlignment="Center" Foreground="WhiteSmoke" Width="500" Height="335"></TextBlock>
            <Button Name="ShowOrders" Click="ShowOrders_Click" Background="#00609c" Foreground="WhiteSmoke" Width="240">
                <Bold>Show Comments</Bold>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
